{
  "name": "farm-management",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:migrate": "npx tsx simple-migrate.ts",
    "db:reset": "supabase db reset",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:setup": "node setup-database.js",
    "db:complete-setup": "echo 'Please run the SQL in supabase/schemas/00_complete_setup.sql in your Supabase Dashboard'",
    "db:apply-schema": "supabase db push",
    "db:generate-types": "supabase gen types typescript --local > src/types/database.types.ts",
    "polar:setup": "npx tsx scripts/setup-polar-products.ts",
    "db:diff": "supabase db diff --schema public",
    "db:deploy": "supabase db push --include-seed",
    "db:apply-schema-remote": "node scripts/apply-schema-api.js",
    "db:apply-schema-remote-psql": "node scripts/apply-schema-remote.js",
    "db:generate-types-remote": "node scripts/generate-types-remote.js",
    "db:deploy-remote": "node scripts/apply-schema-api.js --seed",
    "db:setup-remote": "npm run db:apply-schema-remote && npm run db:generate-types-remote",
    "deploy:fresh:local": "./scripts/deploy-fresh.sh local",
    "deploy:fresh:remote": "./scripts/deploy-fresh.sh remote",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "schema:pull": "./scripts/schema.sh pull",
    "schema:push": "./scripts/schema.sh push",
    "schema:diff": "./scripts/schema.sh diff",
    "schema:types": "./scripts/schema.sh types",
    "schema:reset": "./scripts/schema.sh reset",
    "schema:backup": "./scripts/schema.sh backup",
    "prepare": "husky"
  },
  "dependencies": {
    "@casl/ability": "^6.7.3",
    "@casl/react": "^5.0.0",
    "@polar-sh/sdk": "^0.35.4",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.39.7",
    "@tanstack/react-query": "^5.87.4",
    "@tanstack/react-query-devtools": "^5.87.4",
    "@tanstack/react-router": "^1.131.41",
    "@tanstack/router-devtools": "^1.131.42",
    "@tanstack/router-plugin": "^1.131.49",
    "@types/leaflet": "^1.9.20",
    "echarts": "^5.6.0",
    "echarts-for-react": "^3.0.2",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "leaflet": "^1.9.4",
    "leaflet.heat": "^0.2.0",
    "lucide-react": "^0.544.0",
    "ol": "^10.6.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.63.0",
    "react-i18next": "^16.0.0",
    "react-is": "^19.2.0",
    "react-leaflet": "^5.0.0",
    "recharts": "^3.2.1",
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@playwright/test": "^1.55.1",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.17",
    "dotenv": "^17.2.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^6.1.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "playwright": "^1.55.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3",
    "vite": "^7.1.8",
    "zod": "^4.1.11"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "tsc --noEmit"
    ]
  }
}
